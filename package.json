{
	"name": "hnfeed",
	"version": "0.0.1",
	"description": "",
	"main": "",
	"scripts": {
		"start": "ts-node src/app.ts",
		"healthcheck": "ts-node src/healthcheck.ts",
		"test": "jest"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"author": "Zweih√§nder",
	"license": "AGPL-3.0",
	"dependencies": {
		"@types/express": "^4.17.19",
		"@types/luxon": "^3.3.3",
		"@types/node": "^20.8.5",
		"@types/node-cron": "^3.0.9",
		"@types/rss": "^0.0.30",
		"@types/yargs": "^17.0.28",
		"axios": "^1.5.1",
		"express": "^4.18.2",
		"liquidjs": "^10.9.2",
		"luxon": "^3.4.3",
		"moment": "^2.29.4",
		"node-cron": "^3.0.2",
		"rss": "^1.2.2",
		"ts-node": "^10.9.1",
		"tslib": "^2.6.2",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.7",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-node": "^11.1.0",
		"jest": "^29.7.0",
		"prettier": "^3.0.3",
		"ts-jest": "^29.1.1"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"eslintConfig": {
		"env": {
			"browser": false,
			"es6": true,
			"node": true
		},
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2021
		},
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:node/recommended",
			"prettier"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug",
						"log"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"node/no-unsupported-features/es-syntax": [
				"error",
				{
					"ignores": [
						"modules"
					]
				}
			],
			"node/no-missing-import": [
				"error",
				{
					"tryExtensions": [
						".js",
						".json",
						".node",
						".ts"
					]
				}
			]
		}
	},
	"eslintIgnore": []
}
